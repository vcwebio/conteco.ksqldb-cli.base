#!/usr/bin/env bash

# START CONFIGURATION
DOLLAR='$'
export CONTECO_DC_GLOBAL_STACKS="ksqldb_cli.base"
export CONTECO_DC_GLOBAL_STACKNAMES="conteco_dc_ksqldb_cli"
export CONTECO_DC_GLOBAL_BOOTSTACKS=""
export CONTECO_DC_GLOBAL_RUNSTACKS="conteco_dc_ksqldb_cli"
export CONTECO_DC_GLOBAL_VOLUME_LIST=""
export CONTECO_DC_GLOBAL='$CONTECO_DC_GLOBAL_SERVICE_NAME,$CONTECO_DC_GLOBAL_IMAGE_NAME,$CONTECO_DC_KSQLDB_CLI_ENVIRONMENT,$CONTECO_DC_KSQLDB_CLI_COMMAND,$CONTECO_DC_KSQLDB_CLI_PORTS,$CONTECO_DC_KSQLDB_CLI_VOLUMES,$CONTECO_DC_KSQLDB_CLI_NETWORKS,$CONTECO_DC_KSQLDB_CLI_DEPLOY_MODE,$CONTECO_DC_GLOBAL_VOLUMES,$CONTECO_DC_GLOBAL_NETWORKS'
# END CONFIGURATION

# START GLOBAL SETTINGS
export CONTECO_DC_GLOBAL_SERVICE_NAME="${CONTECO_TYPE}"
export CONTECO_DC_GLOBAL_IMAGE_NAME="${CONTECO_TYPE}.${CONTECO_NAME}:${CONTECO_TAG}"
export CONTECO_DC_KSQLDB_CLI_ENVIRONMENT=
export CONTECO_DC_KSQLDB_CLI_COMMAND=
export CONTECO_DC_KSQLDB_CLI_PORTS=
export CONTECO_DC_KSQLDB_CLI_VOLUMES=
export CONTECO_DC_KSQLDB_CLI_NETWORKS="${DOLLAR}{CONTECO_NETWORKLOCAL}_overlay"
export CONTECO_DC_KSQLDB_CLI_DEPLOY_MODE="replicated"
export CONTECO_DC_GLOBAL_VOLUMES=
export CONTECO_DC_GLOBAL_NETWORKS="${DOLLAR}{CONTECO_NETWORKLOCAL}_overlay: { external: true }"
# END GLOBAL SETTINGS

# START SETTINGS ksqldb_server.base
export CONTECO_DC_KSQLDB_CLI_DEPLOY_RESOURCES_LIMITS_MEMORY="64m"
export CONTECO_DC_KSQLDB_CLI_DEPLOY_RESOURCES_RESERVATIONS_MEMORY="5m"
# END SETTINGS ksqldb_server.base

# START TOPLEVEL SETTINGS
export CONTECO_DC_GLOBAL_VOLUMES=
# END TOPLEVEL SETTINGS
